{# templates/security/login.html.twig #}
{% extends 'connexion.html.twig' %}

{% block title %}Connexion - GesEmp{% endblock %}

{% block login_content %}
    
    <div class="card border-0 shadow-lg" style="width: 400px; max-width: 90%; margin: 0; padding: 20px;">
        <div class="card-body text-center">
            
            <i class="fas fa-university fa-3x mb-3" style="color: #007bff;"></i>
            <h2 class="fw-bold mb-0">GesEmp</h2>
            <p class="text-muted mb-4">Système de Gestion des Employés</p>
            
            <h4 class="mb-4">Connexion</h4>
            
            {# Formulaire de connexion #}
            <form method="post" action="{{ path('security_login') }}" class="text-start">
                
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="mb-3">
                    <label for="inputIdentifiant" class="form-label">Identifiant</label>
                    <input type="text" value="{{ last_username }}" name="email" id="inputIdentifiant" class="form-control" placeholder="Entrez votre identifiant" required autofocus>
                </div>

                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Entrez votre mot de passe" required>
                </div>
                
                {# Mot de passe oublié #}
                <div class="text-end mb-4">
                    <a href="#" class="text-decoration-none">Mot de passe oublié ?</a>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="mt-4">
                    <a href="{{ path('app_departement_list') }}" 
                    class="btn btn-primary btn-lg w-100">
                        Se connecter
                    </a>
                </div>

            </form>
        </div>
    </div>
{% endblock %}